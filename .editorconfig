root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[{*.go,go.mod,go.sum,*.md}]
indent_style = tab
indent_size = 4

[{CMakeLists.txt,*.cmake.in,*.cmake}]
indent_size = 4

[*.py]
indent_size = 4

[{Dockerfile,*.dockerfile}]
indent_size = 4
